<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.StockManager" version="1.0.0" xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Stock Manager</name>
    <description>This app is used to control your stock</description>
    <author email="gabrielbs98@hotmail.com" href="https://buenex.github.io">
        Gabriel Bueno
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <icon src="www/resources/images/favicon.png" platform="android" />

    <platform name="android">
        <!-- Permissions -->
        <allow-intent href="market:*" />
        <allow-navigation href="*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <preference name="Fullscreen" value="true" />
    </platform>
</widget>